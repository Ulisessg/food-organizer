{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "src": [
        "./src/*"
      ],
      "components": [
        "./src/components/*"
      ],
      "context:": [
        "./src/context/*"
      ],
      "controllers": [
        "./src/controllers/*"
      ],
      "hooks": [
        "./src/hooks/*"
      ],
      "lib": [
        "./lib/*"
      ],
      "models": [
        "./src/models/*"
      ],
      "styles": [
        "./src/styles/*"
      ],
      "utils": [
        "./src/utils/*"
      ],
      "pages": [
        "'./pages/*'"
      ],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "build/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}